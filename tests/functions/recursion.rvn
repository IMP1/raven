def fibonacci(int n) int {
    if (n <= 1) {
        return n
    } else {
        int n_2 = n - 2
        int n_1 = n - 1
        return fibonacci(n_2) + fibonacci(n_1)
    }
}

for (int i = 0; i < 10; i = i + 1) {
    print(i)
    print(" => ")
    print(fibonacci(i))
    print("\n")
}

